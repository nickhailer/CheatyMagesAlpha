<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20sp"
    android:layout_marginLeft="20sp"
    android:layout_marginEnd="20sp"
    android:layout_marginRight="20sp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/screenOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100sp"
            android:layout_marginLeft="100sp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/otherPlayerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otherPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginLeft="30sp"
                    android:gravity="right"
                    android:text="Other Players"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/playerNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="PL2   PL3   PL4"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/opponetsCoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=" Coins:    2          7          3"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/opponentsBets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Bets:     ?        ???       ??"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/opponentsHandSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Hand Size:     5          3          4"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coinAndRoundLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/roundNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Round 1"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/yourCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="2"
                    android:textSize="40sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/judgeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judge"
            android:textSize="40sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/roundNumber"
            app:layout_constraintStart_toStartOf="@+id/surfaceView" />

        <edu.up.cs301.GameUI.CMInterface
            android:id="@+id/surfaceView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/discardCardsButton"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text="Discard Cards" />

        <Button
            android:id="@+id/betButton"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:text="Bet" />

        <Button
            android:id="@+id/passButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10sp"
            android:text="Pass"
            android:textSize="14sp" />

        <Button
            android:id="@+id/detectMagicButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20sp"
            android:text="Detect Magic"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

